<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    card_view:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cz.sucharda.gamesbacklogmanager.GameDetailsActivity"
    tools:showIn="@layout/activity_game_details">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:showDividers="beginning|end"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/cgd_title"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/g_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginBottom="10dp"/>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1">

                <TableRow>

                    <TextView
                        android:id="@+id/cgd_label_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_platform"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/cgd_platform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_platform"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cgd_label_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_status"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/cgd_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_status"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/cgd_label_date_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_date_added"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/cgd_date_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/g_date_added"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/cgd_label_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_notes"
                android:textColor="@android:color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/cgd_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_notes"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
