<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/rip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rip_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/rip_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rip_city"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rip_title" />

    <TextView
        android:id="@+id/rip_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rip_latitude"
        app:layout_constraintRight_toLeftOf="@+id/rip_longitude"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/rip_city"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rip_title" />

    <TextView
        android:id="@+id/rip_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rip_longitude"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rip_title" />

</android.support.constraint.ConstraintLayout>